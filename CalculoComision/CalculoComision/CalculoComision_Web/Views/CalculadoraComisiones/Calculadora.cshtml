@model CalculoComision_Web.Models.ComisionViewModel

@{
    ViewData["Title"] = "Calculadora";
}

<h4>ComisionViewModel</h4>
<div><a href="/CalculadoraComisiones/Resultados">Resultados</a></div>
<div><a href="/CalculadoraComisiones/Calculadora">Calculadora</a></div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calcular">
            <div class="form-group">
                <label asp-for="Capital" class="control-label"></label>
                <input asp-for="Capital" class="form-control" />
                <span asp-validation-for="Capital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plazo" class="control-label"></label>
                <input asp-for="Plazo" class="form-control" />
                <span asp-validation-for="Plazo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Operar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
